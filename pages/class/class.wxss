/* 商家优惠券 */
.ccp {
  overflow: scroll;
  /* height: 100%; */
  height: 180rpx;
  display: flex;
  align-items: center;
  /* padding: 0 20rpx; */
  margin-bottom: 20rpx;
  background-color: #fff;
}
.ccp::-webkit-scrollbar {
  display:none
}
.ccp .ccp_item {
  margin-left: 20rpx;
  min-width: 240rpx;
  height: 130rpx;
  border-radius: 10rpx;
  background:linear-gradient(135deg,rgba(255,221,164,1) 0%,rgba(192,150,90,1) 100%);
}
.ccp .ccp_item + .ccp_item {
  margin-left: 10rpx;
}
.ccp .ccp_item .title {
  width: 100%;
  /* height: 36rpx; */
  box-sizing: border-box;
  padding: 4rpx 5rpx;
  border-bottom: 2rpx dashed #fff;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  position: relative;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.ccp .ccp_item .content::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background-color: #fff;
  border-radius: 50%;
  left: -10rpx;
  top: -10rpx; 
}
.ccp .ccp_item .content::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background-color: #fff;
  border-radius: 50%;
  right: -10rpx;
  top: -10rpx; 
}
.ccp .ccp_item .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 10rpx 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.ccp .ccp_item .content .up {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ccp .ccp_item .content .up > view{
  color: #fff;
}
.ccp .ccp_item .content .up > view text{
  font-size: 24rpx;
}
.ccp .ccp_item .content .up > view text:nth-child(1){
  font-size: 48rpx;
}
.ccp .ccp_item .content .up > .btn{
  font-size: 20rpx;
  width: 70rpx;
  padding: 1rpx 0;
  background:rgba(255,255,255,0.7);
  color: #8B572A;
  border-radius: 12rpx;
  text-align: center;
}
.ccp .ccp_item .content .up > .btn.p {
  background:rgba(255,255,255,0.3);
  color:rgba(139,87,42,0.5);
}
.ccp .ccp_item .content text {
  font-size: 20rpx;
  color: #fff;
}
.ccp .more {
  min-width: 146rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}
.ccp .more text {
  font-size: 24rpx;
  color: #333;
}
.ccp .more text:nth-child(2) {
  color: #000;
  margin-left: 12rpx;
}